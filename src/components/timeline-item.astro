---
type Props =  {
  time: string
  title: string
  description: string
  actual?: boolean
}
 const {time, title, description,actual} = Astro.props
---

<li class="mb-10 ml-4 hover:bg-white/5 hover:shadow-[inset_0_1px_0_0_rgba(148,163,184,0.1)] transition-all duration-200 rounded p-4">
  <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -left-1.5 border border-white"></div>
  <div class="flex items-center gap-x-2">

    <time class="mb-1 text-sm font-normal leading-none text-gray-100">{time}</time> 
    {actual ? (    <>
    <span class="mb-1 text-xl font-normal leading-none text-gray-100"> - </span>
    <span class="mb-1 text-sm  leading-none text-gray-100 rounded-full bg-violet-800 px-2 py-1 font-semibold">Actualidad</span> 
    </>) : null}

  </div>
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{title}</h3>
  <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">{description}.</p>

</li>

