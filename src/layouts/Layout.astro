---
import { ViewTransitions } from 'astro:transitions'
import MouseFollow from '../components/mouse-follow.tsx'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Contrata a Tibisay Partidas para que te asista en tu negocio, consultorio mÃ©dico o administre tu tienda. Especialista en Google Docs, Google Calendar, Word, Excel, PowerPoint, entre otros'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body
    class='bg-indigo-950 px-8 md:px-16 flex flex-col md:flex-row justify-between items-center relative md:gap-x-4 print:bg-white'>
    <MouseFollow client:load />
    <slot />
    <style is:global>
      html {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande',
          'Lucida Sans', Arial, sans-serif;
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>
